		System.out.println("[2] - Milktea - 70.00");
		System.out.println("[3] - Softdrinks - 20.00");
		System.out.println(" ");
		System.out.print("Choose your prefered beverages: ");
				beverages = in.nextInt();
				System.out.println(" ");
				
		
switch(menu){
			
			case 1:
			price = 85;
			total = price+total;
			System.out.println("You ordered: ChickenWings"+" - "+price);
			break;
			case 2:
			price = 55;
			total = price+total;
			System.out.println("You ordered: Pancit Malabon"+" - "+price);
			break;
			case 3:
			price = 70;
			total = price+total;
			System.out.println("You ordered: Pork Guisado"+" - "+price);
			break;
			default:
			System.out.println(" Invalid doesnt match in Menu");	
		}
		
		
switch(snacks){
			
			case 1:
			price = 40;
			total = price+total;
			System.out.println("You ordered: French Fries"+" - "+price);
			break;
			case 2:
			price = 55;
			total = price+total;
			System.out.println("You ordered: Cheese Burger"+" - "+price);
			break;
			case 3:
			price = 30;
			total = price+total;
			System.out.println("You ordered: Hotdog"+" - "+price);
			break;
			default:
			System.out.println(" Invalid doesnt match in Snacks");
				}
				
				
switch(beverages){
			
			case 1:
			price = 55;
			total = price+total;
			System.out.println("You ordered: Fruit Juice"+" - "+price);
			break;
			case 2:
			price = 70;
			total = price+total;
			System.out.println("You ordered: Milktea"+" - "+price);
			break;
			case 3:
			price = 20;
			total = price+total;
			System.out.println("You ordered: Softdrinks "+" - "+price);
			break;
			default:
			System.out.println(" Invalid doesnt match in Beverages");
			
	}
			System.out.println(" ");
			System.out.println("Total Price: "+total);
			System.out.println(" ");
	
			System.out.println(" Do you want to order agian? [1] - YES / [2] - NO: ");
			con= in.nextInt();
	
	}while (con==1);
			
			
			
			
		
	}
}

