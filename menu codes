import java.util.Scanner;
public class RestoBar {
	public static void main(String[] args) {
		
     Scanner in = new Scanner(System.in);
	
	int menu = 0, snacks = 0, beverages = 0, con = 0, price = 0, total = 0;
	
		do{
		System.out.println(" Food Menu: ");
		System.out.println(" ");
		System.out.println("[1] - ChickenWings - 85.00");
		System.out.println("[2] - Pancit Malabon - 55.00");
		System.out.println("[3] - Pork Guisado - 70.00");
